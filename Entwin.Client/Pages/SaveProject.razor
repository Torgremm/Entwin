@page "/save-project"
@inject HttpClient Http

<h3>Save Project</h3>

<EditForm Model="@project" OnValidSubmit="HandleValidSubmit">
    <div>
        <label>
            <InputCheckbox @bind-Value="project.ProjectData" />
            Project Data (bool)
        </label>
    </div>

    <button type="submit">Save</button>
</EditForm>

<p>@status</p>

@code {
    private Project project = new();
    private string status = "";

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/project/save", project);

        if (response.IsSuccessStatusCode)
        {
            status = "Project saved!";
        }
        else
        {
            status = $"Failed: {response.StatusCode}";
        }
    }

    public class Project
    {
        public int UserId { get; set; }
        public bool ProjectData { get; set; } = true;
        public DateTime SavedTime { get; set; } = DateTime.UtcNow;
    }
}
