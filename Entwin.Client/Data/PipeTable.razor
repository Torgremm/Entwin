@using Entwin.Client.Data

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Outgoing Ids</th>
            <th>Incoming Ids</th>
            <th>Volume</th>
            <th>Material</th>
            <th>Verticality</th>
        </tr>
    </thead>
    <tbody>
        @if (Items != null)
        {
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.OutgoingIds != null ? string.Join(", ", item.OutgoingIds) : "-")</td>
                    <td>@(item.IncomingIds != null ? string.Join(", ", item.IncomingIds) : "-")</td>
                    <td>@item.Volume</td>
                    <td>@item.Material</td>
                    <td>@item.Verticality</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<Pipe>? Items { get; set; }
}
