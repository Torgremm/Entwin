@using Entwin.Client.Data

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tag</th>
            <th>Type</th>
            <th>Description</th>
            <th>Material</th>
        </tr>
    </thead>
    <tbody>
        @if (Items != null)
        {
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Tag</td>
                    <td>@item.Type</td>
                    <td>@item.Description</td>
                    <td>@item.Material</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<RigObject>? Items { get; set; }
}
